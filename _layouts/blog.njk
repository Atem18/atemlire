---
layout: default
---

<div class="container px-12 mx-auto">
  <div class="my-8 divide-y-2 divide-gray-200">
    {% for post in collections.posts | reverse %}
    <div class="py-8 flex flex-wrap md:flex-nowrap">
      <div class="md:w-64 md:mb-0 mb-6 flex-shrink-0 flex flex-col">
        <span class="font-semibold title-font">{{ post.data.tags }}</span>
        <span class="mt-1 text-sm">
          <time datetime={{ post.date }}>
            {{ post.date | date('dd LLL yyyy') }}
          </time></span>
      </div>
      <div class="md:flex-grow">
        <h2
          class="text-xl md:text-3xl lg:text-4xl leading-none tracking-tight font-extrabold text-gray-800 dark:text-gray-100 mb-2">
          {{ post.data.title }}</h2>
        <a href="{{ post.url }}" class="text-blue-500 inline-flex items-center mt-4">Learn How
          <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none"
            stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"></path>
            <path d="M12 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
